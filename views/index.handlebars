<!-- ./views/index.handlebars -->
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        />
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      {{! 讓表單從路由/search的位置發送, 與路由設定要一樣 }}
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            {{! 將name從原本ｑ改成keyword }}
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            {{! 從app.js帶進來的; 把keyword字串留在搜尋框內 }}
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i>
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="text-end">
      <a href="/restaurant/new"><button class="btn btn-primary">新增餐廳</button></a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-sm-3">
        {{#each restaurants}}
          <div class="col my-3">
            <div class="card h-100 mb-1">
              <img
                class="card-img-top"
                src="{{this.image}}"
                alt="{{this.name}}"
              />
              <div class="card-body p-3">
                <h6 class="card-title mb-1 text-secondary">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>

                <span class="badge rounded-pill text-bg-danger">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
              <div class="card-footer d-flex justify-content-end flex-wrap">
                <a href="/restaurants/{{this._id}}/edit"><button
                    class="btn btn-link btn-sm"
                  >Edit</button></a>
                <a href="/restaurants/{{this._id}}"><button
                    class="btn btn-link btn-sm"
                  >Details</button></a>
                <form
                  action="/restaurants/{{this._id}}?_method=DELETE"
                  method="POST"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm text-white"
                  >delete</button>
                </form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>